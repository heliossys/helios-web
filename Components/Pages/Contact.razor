@page "/contact"

<PageTitle>Contact Us - @WebsiteKeys.Title</PageTitle>

<div class="py-8">
    <div class="space-y-2 pb-8 pt-6 md:space-y-5">
        <h1 class="font-heading text-3xl font-bold leading-9 tracking-tight text-white sm:text-4xl sm:leading-10 md:text-5xl md:leading-14">
            Contact Us
        </h1>
        <p class="text-lg leading-7 text-gray-400">
            Let's discuss how we can help illuminate your IT infrastructure
        </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
            <h2 class="font-heading text-xl font-semibold text-white mb-6">Send Us a Message</h2>
            <form id="contact-form" class="space-y-6">

                <!-- Success Message (hidden by default) -->
                <div id="form-success" class="hidden p-4 rounded-lg bg-green-500/20 border border-green-500/50 text-green-300">
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        <span>Thank you! We'll be in touch soon.</span>
                    </div>
                </div>

                <!-- Error Message (hidden by default) -->
                <div id="form-error" class="hidden p-4 rounded-lg bg-red-500/20 border border-red-500/50 text-red-300">
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        <span>Something went wrong. Please try again or email us directly.</span>
                    </div>
                </div>

                <div>
                    <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Name</label>
                    <input type="text" id="name" name="name" required
                           class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-colors"
                           placeholder="Your name">
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                    <input type="email" id="email" name="email" required
                           class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-colors"
                           placeholder="you@example.com">
                </div>
                <div>
                    <label for="company" class="block text-sm font-medium text-gray-300 mb-2">Company <span class="text-gray-500">(optional)</span></label>
                    <input type="text" id="company" name="company"
                           class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-colors"
                           placeholder="Your company">
                </div>
                <div>
                    <label for="service" class="block text-sm font-medium text-gray-300 mb-2">Service Interest</label>
                    <select id="service" name="service"
                            class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 text-white focus:outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-colors">
                        <option value="">Select a service...</option>
                        <option value="opensource">Open Source Solutions</option>
                        <option value="security">Firewall & Security</option>
                        <option value="networking">Networking Infrastructure</option>
                        <option value="cloud">Cloud Infrastructure</option>
                        <option value="other">Other / General Inquiry</option>
                    </select>
                </div>
                <div>
                    <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Message</label>
                    <textarea id="message" name="message" rows="5" required
                              class="w-full px-4 py-3 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-colors resize-none"
                              placeholder="Tell us about your project or challenge..."></textarea>
                </div>
                <button type="submit" id="submit-btn"
                        class="w-full px-6 py-3 text-base font-medium rounded-lg text-gray-900 bg-primary-500 hover:bg-primary-400 transition-colors flex items-center justify-center gap-2">
                    <span id="btn-text">Send Message</span>
                    <svg id="btn-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </button>
            </form>
            <p class="mt-4 text-sm text-gray-500">
                We typically respond within 1 business day.
            </p>

            <script>
                // Configure the API URL - update this for production deployment
                const CONTACT_API_URL = window.location.hostname === 'localhost'
                    ? 'http://localhost:5001/api/contact'
                    : 'https://api.heliossystems.net/api/contact';

                document.getElementById('contact-form').addEventListener('submit', async function(e) {
                    e.preventDefault();

                    const form = e.target;
                    const submitBtn = document.getElementById('submit-btn');
                    const btnText = document.getElementById('btn-text');
                    const btnSpinner = document.getElementById('btn-spinner');
                    const successMsg = document.getElementById('form-success');
                    const errorMsg = document.getElementById('form-error');

                    // Hide any previous messages
                    successMsg.classList.add('hidden');
                    errorMsg.classList.add('hidden');

                    // Show loading state
                    submitBtn.disabled = true;
                    btnText.textContent = 'Sending...';
                    btnSpinner.classList.remove('hidden');

                    try {
                        const formData = new FormData(form);
                        const data = {
                            name: formData.get('name'),
                            email: formData.get('email'),
                            company: formData.get('company') || null,
                            service: formData.get('service') || null,
                            message: formData.get('message')
                        };

                        const response = await fetch(CONTACT_API_URL, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'Accept': 'application/json'
                            },
                            body: JSON.stringify(data)
                        });

                        if (response.ok) {
                            successMsg.classList.remove('hidden');
                            form.reset();
                        } else {
                            throw new Error('Form submission failed');
                        }
                    } catch (error) {
                        errorMsg.classList.remove('hidden');
                    } finally {
                        // Reset button state
                        submitBtn.disabled = false;
                        btnText.textContent = 'Send Message';
                        btnSpinner.classList.add('hidden');
                    }
                });
            </script>
        </div>

        <!-- Contact Info -->
        <div>
            <h2 class="font-heading text-xl font-semibold text-white mb-6">Other Ways to Reach Us</h2>

            <div class="space-y-6">
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-lg bg-primary-500/20 flex items-center justify-center flex-shrink-0">
                        <span class="text-lg">ðŸ“§</span>
                    </div>
                    <div>
                        <h3 class="font-medium text-white">Email</h3>
                        <a href="mailto:@WebsiteKeys.Email" class="text-primary-400 hover:text-primary-300">
                            @WebsiteKeys.Email
                        </a>
                    </div>
                </div>

            </div>

            <!-- FAQ Teaser -->
            <div class="mt-10 p-6 rounded-xl bg-gray-900/50 border border-gray-800">
                <h3 class="font-heading text-lg font-semibold text-white mb-3">Common Questions</h3>
                <div class="space-y-4 text-sm">
                    <div>
                        <p class="text-gray-300 font-medium">What's your typical engagement process?</p>
                        <p class="text-gray-500 mt-1">We start with a discovery call to understand your needs, then provide a detailed proposal with clear scope and pricing.</p>
                    </div>
                    <div>
                        <p class="text-gray-300 font-medium">Do you offer ongoing support?</p>
                        <p class="text-gray-500 mt-1">Yes, we offer flexible support agreements tailored to your needs, from on-call assistance to fully managed services.</p>
                    </div>
                    <div>
                        <p class="text-gray-300 font-medium">What industries do you serve?</p>
                        <p class="text-gray-500 mt-1">We work across industries, with particular expertise in healthcare, finance, and professional services.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
