@page "/"

<PageTitle>@WebsiteKeys.Title - @WebsiteKeys.Tagline</PageTitle>

<!-- Hero Section -->
<section class="py-16 md:py-24">
    <div class="text-center">
        <!-- Logo -->
        <div class="flex justify-center mb-6">
            <svg class="w-24 h-24 md:w-32 md:h-32" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <linearGradient id="heroSunGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#fcd34d"/>
                        <stop offset="50%" style="stop-color:#fbbf24"/>
                        <stop offset="100%" style="stop-color:#f59e0b"/>
                    </linearGradient>
                </defs>
                <g fill="#f59e0b">
                    <rect x="46" y="5" width="8" height="20" rx="4"/>
                    <rect x="46" y="75" width="8" height="20" rx="4"/>
                    <rect x="5" y="46" width="20" height="8" rx="4"/>
                    <rect x="75" y="46" width="20" height="8" rx="4"/>
                    <rect x="46" y="5" width="6" height="16" rx="3" transform="rotate(45 50 50)"/>
                    <rect x="46" y="5" width="6" height="16" rx="3" transform="rotate(135 50 50)"/>
                    <rect x="46" y="5" width="6" height="16" rx="3" transform="rotate(225 50 50)"/>
                    <rect x="46" y="5" width="6" height="16" rx="3" transform="rotate(315 50 50)"/>
                </g>
                <circle cx="50" cy="50" r="22" fill="url(#heroSunGrad)"/>
            </svg>
        </div>
        <h1 class="font-heading text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl">
            <span class="text-primary-400">Helios</span> Systems
        </h1>
        <p class="mt-4 text-xl text-primary-300 font-medium">@WebsiteKeys.Tagline</p>
        <p class="mt-6 max-w-2xl mx-auto text-lg text-gray-300">
            @WebsiteKeys.Description
        </p>
        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-lg text-gray-900 bg-primary-500 hover:bg-primary-400 transition-colors">
                Get Started
            </a>
            <a href="/services" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-lg text-primary-400 border border-primary-500 hover:bg-primary-500/10 transition-colors">
                Our Services
