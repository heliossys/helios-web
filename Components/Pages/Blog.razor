@code {
    [Parameter] public string? FileName { get; set; }
    Post<BlogFrontMatter>? post;
    List<Post<BlogFrontMatter>> relatedPosts = new();
    int readingTime = 1;

    protected override void OnInitialized()
    {
        if (string.IsNullOrWhiteSpace(FileName)) return;
        post = blazorStaticContentService.Posts.FirstOrDefault(x => x.Url == FileName);

        if (post != null)
        {
            // Calculate reading time (average 200 words per minute)
            var plainText = Regex.Replace(post.HtmlContent, "<[^>]+>", " ");
            var wordCount = plainText.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
            readingTime = Math.Max(1, (int)Math.Ceiling(wordCount / 200.0));
        }

        if (post != null && post.FrontMatter.Tags.Any())
        {
            // Find posts that share at least one tag with the current post
            relatedPosts = blazorStaticContentService.Posts
                .Where(p => p.Url != FileName) // Exclude current post
                .Select(p => new
                {
                    Post = p,
                    MatchingTags = p.FrontMatter.Tags.Intersect(post.FrontMatter.Tags).Count()
                })
                .Where(x => x.MatchingTags > 0)
                .OrderByDescending(x => x.MatchingTags)
                .ThenByDescending(x => x.Post.FrontMatter.Published)
                .Take(4)
                .Select(x => x.Post)
                .ToList();
        }
    }

}
