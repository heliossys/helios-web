@page "/blog"
@page "/blog/{fileName}"
@using System.Globalization
@using System.Text.RegularExpressions
@using BlazorStatic
@using BlazorStatic.Services
@inject BlazorStaticContentService<BlogFrontMatter> blazorStaticContentService

<PageTitle>@(post != null ? $"{post.FrontMatter.Title} - Blog" : "Blog") - @WebsiteKeys.Title</PageTitle>

@* No filename -> show latest posts *@
@if (string.IsNullOrWhiteSpace(FileName))
{
    <div class="divide-y divide-gray-700">
        <div class="space-y-2 pb-8 pt-6 md:space-y-5">
            <H1>Latest</H1>
            <p class="text-lg leading-7 text-gray-400 prose prose-invert">@WebsiteKeys.BlogLead</p>

            <!-- Search Box -->
            <div class="pt-4">
                <div class="relative">
                    <input type="text"
                           id="blog-search"
                           placeholder="Search articles..."
                           class="w-full md:w-80 px-4 py-2 pl-10 rounded-lg bg-gray-900 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-colors"
                           oninput="filterPosts(this.value)">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </div>
            </div>
        </div>

        <PostsList />

        <script>
            function filterPosts(query) {
                const posts = document.querySelectorAll('[data-post]');
                const q = query.toLowerCase().trim();

                posts.forEach(post => {
                    const title = post.getAttribute('data-title')?.toLowerCase() || '';
                    const tags = post.getAttribute('data-tags')?.toLowerCase() || '';
                    const lead = post.getAttribute('data-lead')?.toLowerCase() || '';

                    if (!q || title.includes(q) || tags.includes(q) || lead.includes(q)) {
                        post.style.display = '';
                    } else {
                        post.style.display = 'none';
                    }
                });

                // Show "no results" message
                const visiblePosts = document.querySelectorAll('[data-post]:not([style*="display: none"])');
                let noResults = document.getElementById('no-results');
                if (visiblePosts.length === 0 && q) {
                    if (!noResults) {
                        noResults = document.createElement('p');
                        noResults.id = 'no-results';
                        noResults.className = 'text-gray-400 py-8 text-center';
                        noResults.textContent = 'No articles found matching your search.';
                        document.querySelector('[data-post]')?.parentNode?.appendChild(noResults);
                    }
                    noResults.style.display = '';
                } else if (noResults) {
                    noResults.style.display = 'none';
                }
            }
        </script>
    </div>
    return;
}

